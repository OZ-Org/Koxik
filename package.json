{
	"name": "koxik",
	"version": "2.0.0",
	"description": "Multilingual Discord bot with modern features and extensible architecture.",
	"author": "Oz-Org / OZorg",
	"contributors": [
		{
			"name": "NDBR / Noa",
			"url": "https://github.com/noadevbr"
		}
	],
	"license": "Koxik License (License file)",
	"type": "module",
	"main": "dist/index.js",
	"packageManager": "bun@1.3.5",
	"scripts": {
		"dev": "bun run --env-file=.env.dev ./src/index.ts",
		"dev:watch": "bun run --watch --env-file=.env.dev ./src/index.ts",
		"build": "tsup ./src && tsc-alias",
		"start": "bun run --env-file=.env ./src/index.ts",
		"format": "biome format --write ./src",
		"lint": "biome check --write ./src",
		"migrate": "dotenv -e .env -- drizzle-kit migrate",
		"migrate:dev": "dotenv -e .env.dev -- drizzle-kit migrate",
		"push": "dotenv -e .env -- drizzle-kit push",
		"push:dev": "dotenv -e .env.dev -- drizzle-kit push",
		"pull": "dotenv -e .env -- drizzle-kit introspect",
		"pull:dev": "dotenv -e .env.dev -- drizzle-kit introspect",
		"generate": "drizzle-kit generate",
		"commands:export": "bun src/core/cli/commands.ts commands:export --out commands.json"
	},
	"keywords": [
		"discord-bot",
		"bot",
		"brasil",
		"brazil",
		"discord",
		"brazilian",
		"multilingual",
		"typescript",
		"framework",
		"architecture",
		"modern"
	],
	"dependencies": {
		"@magicyan/discord": "^1.7.0",
		"@top-gg/sdk": "^3.1.6",
		"axios": "^1.13.2",
		"chalk": "^5.6.2",
		"discord.js": "^14.25.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"pg": "^8.16.3",
		"starlightskinapi": "^1.0.10",
		"table": "^6.9.0",
		"topgg-autoposter": "^2.0.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "^1.3.5",
		"@types/node": "^22.19.3",
		"@types/pg": "^8.16.0",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.8",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
