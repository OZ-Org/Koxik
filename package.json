{
	"name": "koxik",
	"version": "2.0.0",
	"description": "Multilingual Discord bot with modern features and extensible architecture.",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "bun run --env-file=.env.dev ./src/index.ts",
		"build": "tsup ./src && tsc-alias",
		"start": "node --env-file=.env ./dist/index.js",
		"start:dev": "node --env-file=.env.dev ./dist/index.js",
		"format": "biome format --write ./src",
		"lint": "biome check --write ./src",
		"migrate:dev": "dotenv -e .env.dev -- drizzle-kit migrate",
		"migrate": "dotenv -e .env -- drizzle-kit migrate",
		"push": "dotenv -e .env.dev -- drizzle-kit push",
		"pull": "dotenv -e .env.dev -- drizzle-kit introspect",
		"generate": "drizzle-kit generate"
	},
	"keywords": [
		"discord-bot",
		"bot",
		"brasil",
		"brazil",
		"discord",
		"brazilian",
		"multilingual",
		"typescript",
		"framework",
		"architecture",
		"modern"
	],
	"author": "Noa",
	"license": "Koxik License (License file)",
	"packageManager": "bun@1.3.3",
	"dependencies": {
		"@magicyan/discord": "^1.6.0",
		"axios": "^1.12.2",
		"chalk": "^5.6.2",
		"discord.js": "^14.23.2",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"pg": "^8.16.3",
		"starlightskinapi": "^1.0.10",
		"table": "^6.9.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^22.18.10",
		"@types/pg": "^8.15.6",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.7",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
